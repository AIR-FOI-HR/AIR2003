<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfilePhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="13dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_profile_photo"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFullName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_typo"
                            android:fontFamily="@font/raleway_bold"
                            android:layout_marginTop="3dp"
                            android:textSize="14dp"
                            android:text="Ana Horvat"/>

                        <TextView
                            android:id="@+id/tvSubscribers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_light"
                            android:fontFamily="@font/raleway"
                            android:textSize="12dp"
                            android:text="128 pretplatnika"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSettings"
                        android:layout_width="76dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="62dp"
                        android:background="@drawable/btn_settings"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="Postavke"
                        android:textAllCaps="false"
                        android:textColor="@color/orange_secondary"
                        android:textSize="11dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAboutMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_typo"
                    android:fontFamily="@font/raleway"
                    android:layout_marginTop="11dp"
                    android:maxLength="115"
                    android:textSize="12dp"
                    android:text="A day in the life of me: Eat avocado toast, sleep and study."/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="52dp">

            <TextView
                android:id="@+id/tvMyPosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:paddingRight="8dp"
                android:text="Moje objave"
                android:textColor="@color/black_typo"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tvFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Ocjene i komentari"
                android:textColor="@color/grey_light"
                android:fontFamily="@font/raleway_medium"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="17dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="26.10.2020., 14:00"
                                android:fontFamily="@font/raleway_medium"
                                android:textSize="16dp"
                                android:textColor="@color/black_typo"
                                android:layout_marginBottom="5dp"/>

                            <TextView
                                android:id="@+id/tvNumberOfPeople"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Optimalan broj ljudi: 2"
                                android:textSize="13dp"
                                android:fontFamily="@font/raleway"
                                android:textColor="@color/grey_light"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnEditPost"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="125dp"
                            android:background="@drawable/ic_edit_fill"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:maxLength="155"
                        android:textColor="@color/black_typo"
                        android:fontFamily="@font/raleway"
                        android:textSize="13dp"
                        android:text="Tražim žensko društvo za menzu. Nije bitno kakvi ste, samo da ne želite ručati sami kao ja :D"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>