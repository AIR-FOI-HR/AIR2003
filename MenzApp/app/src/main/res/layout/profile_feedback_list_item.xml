<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfileUserPhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/ivProfileUserPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_profile_photo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvProfileUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black_typo"
            android:fontFamily="@font/raleway_medium"
            android:text="@string/author_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivStar1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_filled"
            android:padding="1dp"
            app:tint="@color/green_primary" />

        <ImageView
            android:id="@+id/ivStar2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_filled"
            android:padding="1dp"
            app:tint="@color/green_primary" />

        <ImageView
            android:id="@+id/ivStar3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_filled"
            android:padding="1dp"
            app:tint="@color/green_primary" />

        <ImageView
            android:id="@+id/ivStar4"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:padding="1dp"
            android:src="@drawable/ic_star_filled"
            app:tint="@color/green_primary" />

        <ImageView
            android:id="@+id/ivStar5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_star_filled"
            android:padding="1dp"
            app:tint="@color/green_primary" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvFeedbackDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:textColor="@color/black_typo"
        android:textSize="13sp"
        android:text="@string/description" />

    <View
        android:id="@+id/breakLineFeedback"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginVertical="25dp"
        android:background="@drawable/txt_line"
        android:orientation="vertical" />

</LinearLayout>
