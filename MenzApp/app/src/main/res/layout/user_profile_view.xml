<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_primary"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/green_primary"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ic_arrow_1" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSubscribe"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingLeft="15dp"
                android:layout_alignParentEnd="true"
                android:paddingRight="15dp"
                android:background="@drawable/btn_transparent_circled"
                android:fontFamily="@font/raleway_semibold"
                android:text="Pretplati se"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvProfilePhoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="13dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivProfilePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_profile_photo" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvProfileFullName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black_typo"
                                android:fontFamily="@font/raleway_bold"
                                android:layout_marginTop="3dp"
                                android:textSize="14dp"
                                android:text="Ana Horvat" />

                            <TextView
                                android:id="@+id/tvProfileSubscribers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey_light"
                                android:fontFamily="@font/raleway"
                                android:textSize="12dp"
                                android:text="128 pretplatnika" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvProfileAboutMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_typo"
                        android:fontFamily="@font/raleway"
                        android:layout_marginTop="11dp"
                        android:lines="3"
                        android:textSize="12dp"
                        android:text="A day in the life of me: Eat avocado toast, sleep and study." />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="52dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvProfileMyPosts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/layoutPosts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvProfileMyPosts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_bold"
                            android:textSize="14dp"
                            android:textColor="@color/black_typo"
                            android:text="Objave"
                            android:layout_margin="7dp"
                            android:padding="5dp" />

                        <LinearLayout
                            android:id="@+id/expandableProfilePosts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/postNo1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="17dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvHomePostTimestamp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="26.10.2020., 14:00"
                                            android:fontFamily="@font/raleway_medium"
                                            android:textSize="16dp"
                                            android:textColor="@color/black_typo"
                                            android:layout_marginBottom="5dp" />

                                        <TextView
                                            android:id="@+id/tvHomePostPeople"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Optimalan broj ljudi: 2"
                                            android:textSize="13dp"
                                            android:fontFamily="@font/raleway"
                                            android:textColor="@color/grey_light" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/btnEditPost"
                                            android:layout_width="21dp"
                                            android:layout_height="23dp"
                                            android:layout_gravity="right"
                                            android:background="@drawable/ic_plus" />

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvProfilePostDescription"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="11dp"
                                    android:textColor="@color/black_typo"
                                    android:fontFamily="@font/raleway"
                                    android:lines="3"
                                    android:textSize="13dp"
                                    android:text="Tražim žensko društvo za menzu. Nije bitno kakvi ste, samo da ne želite ručati sami kao ja :D" />

                                <View
                                    android:id="@+id/breakLinePost"
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_marginVertical="10dp"
                                    android:background="@drawable/txt_line"
                                    android:orientation="vertical" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvProfileFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:padding="5dp"
                            android:fontFamily="@font/raleway_bold"
                            android:textSize="14dp"
                            android:textColor="@color/black_typo"
                            android:text="Ocjene i komentari" />

                        <LinearLayout
                            android:id="@+id/expandableProfileFeedbacks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="17dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/cvProfileUserPhoto"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginRight="10dp"
                                        app:cardCornerRadius="50dp">

                                        <ImageView
                                            android:id="@+id/ivProfileUserPhoto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@mipmap/ic_profile_photo" />

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/tvProfileUserName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textSize="14dp"
                                        android:textColor="@color/black_typo"
                                        android:fontFamily="@font/raleway_medium"
                                        android:text="Petra Petrić" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/ivStar1"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_star_filled"
                                        android:padding="1dp"
                                        app:tint="@color/green_primary" />

                                    <ImageView
                                        android:id="@+id/ivStar2"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_star_filled"
                                        android:padding="1dp"
                                        app:tint="@color/green_primary" />

                                    <ImageView
                                        android:id="@+id/ivStar3"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_star_filled"
                                        android:padding="1dp"
                                        app:tint="@color/green_primary" />

                                    <ImageView
                                        android:id="@+id/ivStar4"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_star_filled"
                                        android:padding="1dp"
                                        app:tint="@color/green_primary" />

                                    <ImageView
                                        android:id="@+id/ivStar5"
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_star_filled"
                                        android:padding="1dp"
                                        app:tint="@color/green_primary" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvFeedbackDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="3"
                                    android:fontFamily="@font/raleway"
                                    android:textColor="@color/black_typo"
                                    android:textSize="13dp"
                                    android:text="Super cura. otvorena i druželjubiva. Super smo se proveli na ručku, sigurno idemo opet :D" />

                                <View
                                    android:id="@+id/breakLineFeedback"
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:layout_marginVertical="10dp"
                                    android:background="@drawable/txt_line"
                                    android:orientation="vertical" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>