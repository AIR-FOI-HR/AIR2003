<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="17dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPostDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26.10.2020., 14:00"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black_typo"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/tvNumOfPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Optimalan broj ljudi: 2"
                    android:textSize="13dp"
                    android:fontFamily="@font/raleway"
                    android:textColor="@color/grey_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnEditPost"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_edit_fill" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvHomePostDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textColor="@color/black_typo"
            android:fontFamily="@font/raleway"
            android:textSize="13dp"
            android:text="Tražim žensko društvo za menzu. Nije bitno kakvi ste, samo da ne želite ručati sami kao ja :D" />

        <View
            android:id="@+id/breakLinePost"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/txt_line"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>